<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewUserImageComments"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/userEmailTextViewForComments"
        android:layout_width="315dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="username"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewUserImageComments"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentTextForComments"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="comment"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewUserImageComments"
        app:layout_constraintTop_toBottomOf="@+id/userEmailTextViewForComments" />


</androidx.constraintlayout.widget.ConstraintLayout>